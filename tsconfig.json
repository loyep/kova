{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true,
    "inlineSourceMap":true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "outDir": "dist",
    "typeRoots": [ "./typings", "./node_modules/@types"],
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@/*": [
        "web/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "test",
    "web",
    "build"
  ]
}

